  "peerDependencies": {
    "react": "^18.0.0"
  },
  "devDependencies": {
    "@types/node": "^18.11.18",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.4.2",
    "react": "^18.2.0",
